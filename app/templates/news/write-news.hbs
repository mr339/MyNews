<form>
  <div class="form-group">
    <label>Full name</label>
    {{input type="text" class="form-control" value=name placeholder="Write your name..."}}
  </div>
  <div class="form-group">
    <label>Title of News</label>
    {{input type="text" class="form-control" value=title placeholder="Write your news title..."}}
  </div>
{{!--    <div class="form-group">
    <label>Date</label>
    {{input type="date" class="form-control" value=date}}
  </div> --}}
  <div class="form-group">
    <label>Details of the news</label>
    {{textarea class="form-control" value=details placeholder="Details..."}}
  </div>
  <div class="form-group">
    <label>Choose photo for new's cover</label>
    <div disabled={{isDisabled}} class="choosefile">{{x-file-input name="files"
      multiple=true
      action="didSelectFiles"
      alt="Choose a File"
      class="btn btn-primary"}}</div>
  </div>
    {{#if progress}}{{!-- {{ember-progress-bar  progress=progress options=(hash strokeWidth=1 duration=100) }} --}}
      <div style="margin-top:50px;"  id="loader">
        <progress class="progress progress-success" value={{progress}} max="100"></progress>
      </div>
    {{/if}}

    {{#if status}}
      <p class="text-primary">{{progressText}}</p>
    {{/if}}
  <hr>
  <button disabled={{isDisabled}} {{action 'writeNews'}} class="btn btn-primary">Post</button><hr>

   {{#link-to 'news'}}<button class="btn btn-primary">Read Recent News</button>{{/link-to}}

</form>

